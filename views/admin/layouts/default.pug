html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
    link(rel="stylesheet", href="https://unpkg.com/filepond@^4/dist/filepond.css")
    link(rel="stylesheet", href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(rel="preload", as="style", href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap")
    link(rel="stylesheet", href="/admin/assets/css/style.css")
    
    //- Only load TinyMCE on pages that need it
    if !notloadtinyMCE
      script(src="https://cdn.tiny.cloud/1/c86ykjogrym50wn421xqpjl1tg614r0iqfdmo6rdt9l10tuj/tinymce/7/tinymce.min.js" referrerpolicy="origin")
      script(src="/admin/assets/js/tinymce-config.js")
    
    script.
      const pathAdmin = "#{pathAdmin}";
  body
    - if (messages.success) 
      div( class="alert alert-success" alert-time="3000")
        | #{messages.success}
    //- Header
    include ../partials/header.pug
    //- End Header

    //- Sider
    include ../partials/sider.pug
    //- End Sider

    //- Main
    main.main
      block main
    //- End Main
    script(src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.6/Sortable.min.js")
    script(src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js") 
    script(src="https://unpkg.com/filepond-plugin-file-validate-type/dist/filepond-plugin-file-validate-type.js") 
    script(src="https://unpkg.com/filepond@^4/dist/filepond.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js") 
    script(src="https://cdn.jsdelivr.net/npm/just-validate@4.3.0/dist/just-validate.production.min.js")
    script(src="/admin/assets/js/script.js")
